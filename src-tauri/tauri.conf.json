{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "svelte-tauri-app",
  "version": "0.1.0",
  "identifier": "com.svelte-tauri-app.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "height": 400,
        "width": 400,
        "resizable": false,
        "decorations": false,
        "titleBarStyle": "Overlay",
        "center": true,
        "visible": false
      },
      {
        "label": "settings",
        "fullscreen": false,
        "height": 600,
        "width": 600,
        "resizable": true,
        "center": true,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
